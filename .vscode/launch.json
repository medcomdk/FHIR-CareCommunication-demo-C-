    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Sender (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CareCommunicationSender/bin/Debug/net6.0/CareCommunicationSender.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Launch Receiver (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CareCommunicationReceiver/bin/Debug/net6.0/CareCommunicationReceiver.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CareCommunicationReceiver",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}